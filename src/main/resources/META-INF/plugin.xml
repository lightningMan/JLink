<idea-plugin>
  <id>org.jfrog</id>
  <name>JLink</name>
  <description>Right-click anywhere in the editor and click 'JLink' to create (and copy to clipboard) a sharable link directly to the desired location in the code.</description>
  <version>0.0.1</version>
    <idea-version since-build="173.0" />
  <version>1.0.0</version>
  <vendor email="yoazmenda@gmail.com" url="https://www.jfrog.com">JFrog</vendor>
 
  <depends>com.intellij.modules.lang</depends>

  <extensions defaultExtensionNs="com.intellij"/>


  <actions>
    <action id="JLink" class="JLinkGenerator" text="JLink" description="Generates JLinks" icon="/icons/icon.png">
      <add-to-group group-id="EditorPopupMenu" anchor="after" relative-to-action="CopyReference"/>
      <keyboard-shortcut keymap="$default" first-keystroke="meta alt J"/>
    </action>
  </actions>

</idea-plugin>
